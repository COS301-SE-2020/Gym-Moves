        function getGymClasses()
        {
            var xmlhttp = new XMLHttpRequest();

            xmlhttp.onreadystatechange = function () {
                if (xmlhttp.readyState == XMLHttpRequest.DONE) {   // XMLHttpRequest.DONE == 4
                    if (xmlhttp.status == 200)
                    {
                        classesjson = JSON.parse(xmlhttp.responseText);
                        if (classesjson.length == 0) { window.alert("There are no classes at the gym.");}
                        else {


                            for (var y = 0; y < classesjson.length; y++) {
                                getClassRatings(classesjson[y].classId, y);

                            }
                        }
                    }
                    else if (xmlhttp.status == 400) {
                        alert('400');
                    }
                    else {
                        alert('There are currently no classes at the gym.');
                    }
                }
            };

           xmlhttp.open("GET", '@Url.Content("~/api/classes/gymlist?gymid=1")', true);
            xmlhttp.send();
        }

        

       
      
      function addToArray(classRatingsJson, d)
        {


          var rating = (classRatingsJson[0].ratingSum) / (classRatingsJson[0].ratingCount);

            var students = (classesjson[d].maxCapacity) - (classesjson[d].currentStudents);
            Results.push([classesjson[d].classId, classesjson[d].name, classesjson[d].description, classesjson[d].instructor, classesjson[d].day, classesjson[d].startTime, students, classesjson[d].cancelled, rating]);
        }

