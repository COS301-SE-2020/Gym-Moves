        <script>
        if (document.cookie != "") {
            document.getElementById("managerPageButton").innerText = "View Dashboard";
            document.getElementById("managerPageLink").href = "@Url.Content("~/Dashboard/Home")";

        }
        else {
            document.getElementById("managerPageButton").innerText = "Login";
            document.getElementById("managerPageLink").href = "@Url.Content("~/ManagerLogin")";
        }
